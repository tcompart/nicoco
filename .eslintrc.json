{
	"env": {
		"browser": true
	},
	"extends": "eslint:recommended",
	"globals": {
		"angular": true,
		"CryptoJS": true,
		"$": true
	},
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		]
	}
}
